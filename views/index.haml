.container
  .pure-g-r
    .pure-u-1-3
    .pure-u-1-3
      %form.name-centered.bottom{:action => "/recipes", :method => "get"}
        %label{:for => "query"}
        %input{:type => "text", :name => "query", :id => "query"}
        %input{:type => "submit", :value => " h u n g r y ?"}

      %table.pure-table.table-centered
        %thead
          %tr
            %td.name-centered R E C I P I E S (A-Z)
        %tbody
        - @all_recipes.each do |recipe|
          %tr
            %td= "<a href='/recipes/#{recipe['id']}'>#{recipe['name']}</a>"

      - if !@search
        %ul.pure-paginator.centered_pagination
          - if @page != 1
            %li= "<a class='pure-button' href='/recipes?page=#{@page - 1}'>&#171; b a c k</a>"
          %li= "<a class='pure-button' href='/recipes?page=#{@page + 1}'>n e x t &#187;</a>"
        %p.centered_pagination= @page
